@model IEnumerable<BusOnlineReservationSystem.Models.Bus>

@{
    ViewBag.Title = "Buses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Available Buses</h2>

<p>
    @Html.ActionLink("Add new bus", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.line.FromCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.line.ToCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lineID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.line.FromCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.line.ToCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lineID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
